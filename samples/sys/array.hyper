package sys
{
	export struct array<T: type, N: uint>
	{
		data: mutable T[N];
	}

	export function array.empty() -> bool
	{
		return size() == 0;
	}

	export function array.size() -> uint
	{
		return N;
	}

	export function array.data() -> T*
	{
		return data;
	}

	export function array.data() -> mutable T*
	{
		return data;
	}
}
